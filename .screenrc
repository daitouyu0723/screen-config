#  屏幕缓冲区4096行
defscrollback 4096

# 下标签设置
hardstatus on
caption always "%{= kw}%-w%{= kG}%{+b}[%n bash]%{-b}%{= kw}%+w %=%d %M %0c %{g}%H%{-}"
termcapinfo rxvt 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
termcapinfo xterm ti@:te@
termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'

#关闭闪屏
vbell off

#关闭screen的startup message
startup_message off
